{
  "hosting": {
    "public": "public",
    "site": "aipi-global",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
"targets": {
      "aipi-global": {
        "source": "public/aipi",
        "dewey_range": "001-099",
        "domains": [
          "aipublishinginternational.com",
          "aipublishinginternational.co.uk",
          "aipub.co.uk",
          "aipillp.co.uk"
        ]
      },
      "social-hub": {
        "source": "public/social",
        "domains": ["2100.pub"],
        "purpose": "Community engagement"
      },
      "opus-1": {
        "source": "public/opus1",
        "domains": [
          "aixtiv.world",
          "aixtiv.live",
          "asoos.cool",
          "asoos.live"
        ],
        "purpose": "Amplify platform"
      },
      "memory-plaza": {
        "source": "public/memory-plaza",
        "dewey_range": "700-799",
        "domains": ["2100.institute", "c2100.co"]
      },
      "vision-lake": {
        "source": "public/vision-lake",
        "dewey_range": ["100-199", "800-899"],
        "domains": ["coaching2100.org", "getready2100.com", "drmatch.live"]
      },
      "edge-labs": {
        "source": "public/edge-labs",
        "dewey_range": "400-409",
        "domains": ["aixtiv.world", "asoos.live"]
      },
      "queen-mint-mark": {
        "source": "public/queen-mint-mark",
        "dewey_range": "620-629",
        "domains": ["2100.foundation", "2100.cool"]
      }
    },
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}

{
  "hosting": [
    {
      "target": "drclaude-live",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/claude-code-generate",
          "function": "claudeCodeGenerate"
        },
        {
          "source": "/context-storage",
          "function": "contextStorage"
        },
        {
          "source": "/model-metrics",
          "function": "modelMetrics"
        },
        {
          "source": "/projects/delegate",
          "function": "drClaude"
        },
        {
          "source": "/dr-claude-health",
          "function": "drClaude"
        }
      ]
    }
  ],
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  }
}
