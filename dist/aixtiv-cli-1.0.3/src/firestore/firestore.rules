rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for authorization
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/admin_users/$(request.auth.uid));
    }
    
    function isValidChange() {
      return request.resource.data.updatedAt == request.time;
    }
    
    // Universal prompts collection
    match /unified_prompts/{promptId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.createdAt == request.time;
      allow update: if (isOwner(resource.data.userId) || isAdmin()) && 
                      isValidChange();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Prompt runs collection for tracking dispatch operations
    match /prompt_runs/{runId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.createdAt == request.time;
      allow update: if (isOwner(resource.data.userId) || isAdmin()) && 
                      isValidChange();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Chat history and memory collection
    match /chat_history/{entryId} {
      allow read: if isAuthenticated() && 
                    (isOwner(resource.data.userId) || 
                     resource.data.copilotId == request.auth.uid);
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.timestamp == request.time;
      allow update: if (isOwner(resource.data.userId) || isAdmin()) && 
                      isValidChange();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Chain execution results
    match /chain_results/{resultId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.createdAt == request.time;
      allow update: if (isOwner(resource.data.userId) || isAdmin()) && 
                      isValidChange();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Dr. Match tasks collection
    match /drmatch_tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.createdAt == request.time;
      allow update: if (isOwner(resource.data.userId) || isAdmin()) && 
                      isValidChange();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Canva integration collection
    match /canva_projects/{projectId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.createdAt == request.time;
      allow update: if (isOwner(resource.data.userId) || isAdmin()) && 
                      isValidChange();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // User profiles collection
    match /user_profiles/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isOwner(userId) || isAdmin();
    }
    
    // Admin users collection
    match /admin_users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}