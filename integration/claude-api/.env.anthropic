# Anthropic Claude API Configuration
# This file contains specific configuration for Claude API integration

# Primary API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-4
CLAUDE_API_ENDPOINT=https://api.anthropic.com/v1/messages
CLAUDE_API_VERSION=2023-06-01

# Request Configuration
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_TIMEOUT_MS=30000

# Retry Configuration
CLAUDE_MAX_RETRIES=3
CLAUDE_INITIAL_RETRY_DELAY_MS=1000
CLAUDE_MAX_RETRY_DELAY_MS=10000
CLAUDE_RETRY_EXPONENTIAL_BASE=2

# Rate Limiting
CLAUDE_RATE_LIMIT_PER_MINUTE=100
CLAUDE_BURST_LIMIT=20

# Agent-Specific Settings
RIX_SYSTEM_PROMPT="You are RIX, a Refined Intelligence Expert specialized in high-quality analysis and decision-making."
CRX_SYSTEM_PROMPT="You are CRX, a Customer Relations Expert focused on exceptional user experiences and support."
COPILOT_SYSTEM_PROMPT="You are a Co-Pilot agent, providing intelligent assistance and collaboration."

# Performance Settings
CLAUDE_ENABLE_STREAMING=false
CLAUDE_ENABLE_CACHING=true
CLAUDE_CACHE_TTL_SECONDS=300

# Debug and Monitoring
CLAUDE_ENABLE_DEBUG_LOGGING=false
CLAUDE_LOG_LEVEL=info
CLAUDE_TRACK_USAGE=true

# Region-specific Configuration (for us-west1)
CLAUDE_REGION=us-west1
CLAUDE_ENDPOINT_REGION=us-west1
